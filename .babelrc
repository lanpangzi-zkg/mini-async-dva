{
    "presets": [
        [
            "@babel/preset-env",
            {
                "useBuiltIns": "entry",
                "targets": {
                    "chrome": "58",
                    "ie": "11"
                },
                "corejs": { "version": 3, "proposals": true }
            }
        ],
        ["@babel/preset-react", {
            "runtime": "automatic"
        }]
    ],
    "plugins": [
        ["@babel/plugin-proposal-decorators", { "legacy": true }],
        "@babel/plugin-transform-runtime",
        "@babel/plugin-syntax-dynamic-import"
    ]
}